configuration {
	font:                           "Saira 18"; 
    show-icons:                     true;
	icon-theme:                     "WhiteSur-orange-dark";
    display-drun:                   "ï€‚";
    drun-display-format:            " {name}";
    disable-history:                false;
    fullscreen:                     true;
	hide-scrollbar:                 true;
	sidebar-mode:                   false;
}

@import "colors.rasi"

* {
    background:                     transparent;
}

window {
    transparency:                   "background";
    background-color:               @bg;
    text-color:                     @fg;
	border:                         0px;
	border-color:                   @border;
    border-radius:                  0px;
    padding:                        10%;
    height:                         100%;
    width:                          100%;
}

prompt {
    enabled:                        true;
	padding:                        0% 1% 0% 0%;
	background-color:               @al;
	text-color:                     @fg;
	font:                           "FontAwesome 56";
}

entry {
	font:                           "Saira 24";
    background-color:               @al;
    text-color:                     @fg;
    placeholder-color:              @fg;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search";
    padding:                        0.5% 0% 0% 0%;
    blink:                          true;
}

inputbar {
	children:                       [ prompt, entry ];
    background-color:               @se;
    text-color:                     @fg;
    expand:                         false;
	border:                         0% 0% 0% 0%;
    border-radius:                  12px;
	border-color:                   @accent;
    margin:                         2% 0% -5% 0%;
    padding:                        1.5%;
}

listview {
    background-color:               @al;
    columns:                        6;
    lines:                          4;
    spacing:                        0.1%;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @al;
	border:                         0% 0% 0% 0%;
    border-radius:                  0% 0% 0% 0%;
	border-color:                   @ac;
    children:                       [ inputbar, listview ];
    spacing:                       	10% 10% 10% 10%;
    padding:                        4% 8% 5% 8%;
}

element {
    background-color:               inherit;
    text-color:                     @fg;
    orientation:                    vertical;
    border-radius:                  0%;
    padding:                        2% 1% 2% 1%;
}

element-icon {
    background-color:               @al;
    size:                           120px;
    border:                         0px;
}

element-text {
    font:                           "Saira 18";
    background-color:               @al;
    text-color:                     inherit;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
}

element selected {
    background-color:               @se;
    text-color:                     @fg;
	border:                         0% 0% 0% 0%;
    border-radius:                  12px;
    border-color:                  	@accent;
}
